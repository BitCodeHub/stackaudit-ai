# ============================================
# StackAudit.ai Environment Variables
# Copy to .env and fill in your values
# ============================================

# ===========================================
# Application
# ===========================================
NODE_ENV=development
PORT=3000
APP_PORT=3000
CLIENT_PORT=5173

# ===========================================
# Database (PostgreSQL)
# ===========================================
# Local Development
POSTGRES_USER=stackaudit
POSTGRES_PASSWORD=stackaudit_dev_password
POSTGRES_DB=stackaudit
POSTGRES_PORT=5432

# Production (single connection string)
# DATABASE_URL=postgres://user:password@host:5432/database?sslmode=require

# ===========================================
# Cache (Redis)
# ===========================================
REDIS_PASSWORD=stackaudit_redis_dev
REDIS_PORT=6379

# Production (single connection string)
# REDIS_URL=redis://:password@host:6379

# ===========================================
# Security (GENERATE UNIQUE VALUES!)
# ===========================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
SESSION_SECRET=your-super-secret-session-key-32chars
ENCRYPTION_KEY=your-32-char-encryption-key!!!!

# ===========================================
# AI API Keys
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# ===========================================
# External Integrations
# ===========================================
# Stripe (Payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# SendGrid (Email)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
FROM_EMAIL=noreply@stackaudit.ai

# ===========================================
# OAuth Providers (Optional)
# ===========================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ===========================================
# Feature Flags
# ===========================================
ENABLE_ANALYTICS=true
ENABLE_RATE_LIMITING=true
ENABLE_SIGNUP=true
ENABLE_OAUTH=false

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ===========================================
# CORS & Security
# ===========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
TRUST_PROXY=false

# ===========================================
# File Storage
# ===========================================
# S3-compatible storage (optional)
S3_BUCKET=stackaudit-uploads
S3_REGION=us-west-2
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_ENDPOINT=https://s3.amazonaws.com

# ===========================================
# Monitoring (Optional)
# ===========================================
SENTRY_DSN=https://your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key
